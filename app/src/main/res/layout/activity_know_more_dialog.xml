<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/know_more_background"
    android:orientation="vertical"
    android:paddingBottom="20dip"
    android:paddingLeft="30dip"
    android:paddingRight="30dip"
    android:paddingTop="50dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/developesText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DEVELOPERS"
            android:padding="10dip"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:padding="10dip"
            android:gravity="center|left"
            android:text="Vibrations&apos;15 Developer\n\nRishabh Agarwal (CSE'13)\n\nFor any feedback or suggestions about the App, feel free to contact\n\n"
            android:textColor="#000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dip"
            android:src="@drawable/divider" />

        <TextView
            android:id="@+id/contactusText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:gravity="center"
            android:text="CONTACT US"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center|left"
            android:text="For any help regarding Vibrations or for any query feel free to contact us:\n\nDinesh Dadlani- +917737575301\nAnurag Swarnkar- +919660322755"
            android:textColor="#000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dip"
            android:src="@drawable/divider" />

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:gravity="center"
            android:text="ABOUT THE APP"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eventlistText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Event List:-"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center|left"
            android:text="Swipe left or right to browse through the events.
Use the tabs to jump to a particular category.
You may set a reminder to let you know the commencement of an event."
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/schText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Schedule:-:-"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center|left"
            android:text="Know about the venue and time slot of every event day wise."
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/galleryText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Gallery:-"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center|left"
            android:text="LIVE FEED GALLERY!!....
See if you got captured in one of our photos! The Gallery is updated every hour."
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/registerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Registration:-"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/editText51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center|left"
            android:text="Register Yourself for Various events.
Registration for on stage events closes on 20th January 2014"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/whatsText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Whats Hot?"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center|left"
            android:text="Know about ongoing events and their location"
            android:textColor="#000"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/editText78"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="center|left"
            android:text="Version 4.2.15.2"
            android:textColor="#000"
            android:textSize="15sp" >
        </TextView>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dip"
            android:src="@drawable/divider" />
    </LinearLayout>

</ScrollView>